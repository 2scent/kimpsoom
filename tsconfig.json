{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2015",
    "module": "CommonJS",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@fixtures/*": ["./fixtures/*"]
    }
  },
  
  "exclude": ["node_modules"]
}
